<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Appender per a la consola -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Nivell de log per defecte per a tota l'aplicació -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Nivell de log específic per al nostre package -->
    <logger name="cat.iesesteveterradas" level="DEBUG" />

</configuration>
